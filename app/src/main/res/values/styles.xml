<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:textColor">@color/detailsTextColor</item>
        <item name="android:layout_marginTop">12sp</item>
    </style>

    <style name="EditTextDetails">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="TitleAddMovie">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:layout_marginTop">9sp</item>
    </style>

    <style name="DetailsTitle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="DetailsSubtitle">
        <item name="android:textColor">@color/subtitleTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DetailsHeader">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>









</resources>
